{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Debug with auto-reload",
      "runtimeArgs": [
        "--experimental-strip-types",
        "--watch"
      ],
      "args": [
        "${workspaceFolder}/src/index.ts"
      ],
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen",
      "restart": true,
      "skipFiles": [
        "<node_internals>/**"
      ],
      "env": {
        "PORT": "3000"
      }
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Debug TypeScript",
      "runtimeArgs": [
        "--experimental-strip-types"
      ],
      "args": [
        "${workspaceFolder}/src/index.ts"
      ],
      "cwd": "${workspaceFolder}",
      "internalConsoleOptions": "openOnSessionStart",
      "skipFiles": [
        "<node_internals>/**"
      ],
      "env": {
        "PORT": "3000"
      }
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Debug Built JS",
      "program": "${workspaceFolder}/dist/index.js",
      "preLaunchTask": "npm: build",
      "outFiles": [
        "${workspaceFolder}/dist/**/*.js"
      ],
      "skipFiles": [
        "<node_internals>/**"
      ],
      "env": {
        "PORT": "3000"
      }
    }
  ]
}